extends partials/layout_not_logged

block content
    h5.indigo-text.center.text-accent-4 Password reset
        div.row
            div.z-depth-1.grey.grey.lighten-4.row.col.m4.offset-m4.s12.form-container
                form(action='',  method='post').col.s12
                    input(type='hidden' name='token' value=token)
                    div.row
                        p.col.s12.grey-text.flow-text Please enter your new password.
                    div.row
                        div.input-field.col.s12
                            input(type='password' name='password' required).validate
                            label New password
                    div.row
                        div.input-field.col.s12
                            input(type='password' name='passwordConf' required).validate
                            label New password confirmation
                    div.row
                        div.col.s12
                            button(type='submit').col.s12.btn.waves-effect.waves-light.btn-large Reset password

block scripts
    script.
        validateForm(!{JSON.stringify(locals.formInputs)}, !{JSON.stringify(locals.formErrors)});